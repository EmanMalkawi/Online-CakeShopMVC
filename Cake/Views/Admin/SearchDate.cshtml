    $(document).ready(function () {
                $('.eman').DataTable({
                    dom: 'Bfrtip',
                    buttons: [
                        'excelHtml5',
                        'pdfHtml5',
                        'csvHtml5',
                        'copyHtml5'
                    ]

                });
            });</script>























