<body>
    <div class="row">




        @if (Model != null)
        {
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <h2>Orders </h2>

                    </div>

                    <table class="table eman">

                        <thead>
                            <tr>
                                <th>
                                    <h2> Product Name </h2>
                                </th>
                                <th>
                                    <h2> Order Date </h2>
                                </th>
                                <th>
                                    <h2> Order Price </h2>
                                </th>
                                <th>
                                    <h2> Quantity </h2>
                                </th>

                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>

                                    <div class="col-lg mb-5 col-12">
                                        <div class="card h-100  product_overlay">
                                            <div class="card-body p-4">
                                                <div class="text-center">

                                    <td>
                                        <h5 class="fw-bolder">@item.Productname</h5>
                                    </td>

                                    <td> <span class="text-muted text-decoration-line-through">@item.Oederdate </span> </td>
                                    <td> <span class="text-muted text-decoration-line-through">@item.Price JD</span> </td>
                                    <td> <span class="text-muted text-decoration-line-through">@item.Quantity </span> </td>

                    </div>
                </div>


            </div>

                                 </div>

                                </tr>
        }
                            </tbody>

                            </table>
                            </div>

                            </div>
                        }
                        else
                        {
                            <h1>No Orders Found</h1>
                        }


        </div>





        <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>

        <script type="text/javascript" src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
