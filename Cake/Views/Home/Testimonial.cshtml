    .contact-form label {
        font-weight: 600;
        margin: 10px;
    }

    .contact-form button {
        background: #25274d;
        color: #fff;
        font-weight: 600;
        width: 25%;
        margin: 10px;
    }

    .row {
        height: 550px;
    }

    .btn-primary {
        color: #fff !important;
        background-color: #a83bb2 !important;
