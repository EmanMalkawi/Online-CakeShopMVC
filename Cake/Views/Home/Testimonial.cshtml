                    <h2> Testimonial Form</h2>
                    <form asp-action="Testimonial" method="post" style="padding: 36px; width: 300px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <div class="form-group">
                            <label asp-for="Firstname" class="control-label col-sm-2">First Name:</label>
                            <div class="col-sm-10">
                                <input asp-for="Firstname" type="text" class="form-control">
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Lastname" class="control-label col-sm-2">Last Name:</label>
                            <div class="col-sm-10">
                                <input asp-for="Lastname" type="text" class="form-control">
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label col-sm-2">Email:</label>
                            <div class="col-sm-10">
                                <input asp-for="Email" type="text" class="form-control" >
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label asp-for="Text" class="control-label col-sm-2">Message:</label>
                            <div class="col-sm-10">
                                <input asp-for="Text" type="text" class="form-control">
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <input type="submit" value="SEND" class="btn btn-default" onclick="Done()" />
                            </div>

                        </div>
                        <a href="/Home/Index" class="btn btn-default"> Back </a>

                    </form>
                </div>

                @*<div id="confirm">
                        <p id="test"></p>
                    </div>*@

            </div>
        </div>
    </div>







