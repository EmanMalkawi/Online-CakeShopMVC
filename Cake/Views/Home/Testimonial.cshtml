<style>

    .contact {
        padding: 150px;
        height: 400px;
    }

    .col-md-3 {
        background: #a1359d;
        padding: 5%;
        border-top-left-radius: 0.5rem;
        border-bottom-left-radius: 0.5rem;
    }

    button.btn.btn-default {
        background-color: purple;
    }



    .contact-info {
        margin-top: 10%;
    }

        .contact-info img {
            margin-bottom: 15%;
        }

        .contact-info h2 {
            margin-bottom: 10%;
        }

    .col-md-9 {
        background: #e1d1d1;
        padding: 3%;
