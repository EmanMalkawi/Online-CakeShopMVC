@model IEnumerable<Cake.Models.Order>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CustOrder</title>
</head>
<body>

    <h2 style="text-align:center; padding:20px"> My Orders</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Productname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Oederdate)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Cust)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.Product)
                    </th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Productname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oederdate)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Cust.Custid)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Product.Productid)
                        </td>*@
                    @*<td>
                            <a asp-action="Edit" asp-route-id="@item.Orderid">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Orderid">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Orderid">Delete</a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-primary" type="submit"> <a style="text-decoration:none" href="/Home/Index">Back</a> </button>

</body>

</html>

<style>
    table, th, td {
        border: 1px solid black;
        width: 300px;
        height: 50px;
        border-collapse: collapse;
    }
    th {
        background-color: #04AA6D;
        color: white;
    }
    table {
        padding-left: 10px
    }

</style>
