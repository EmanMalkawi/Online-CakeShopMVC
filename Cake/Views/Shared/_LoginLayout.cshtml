@model Tuple<IEnumerable<Cake.Models.Home>, IEnumerable<Cake.Models.Category>, IEnumerable<Cake.Models.Cakeshop>, IEnumerable<Cake.Models.Home>
      , IEnumerable<Cake.Models.Aboutu>, IEnumerable<Cake.Models.Feedback>>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mochiy+Pop+P+One&display=swap" rel="stylesheet">


    <!-- Css Styles -->
    <link rel="stylesheet" href="/assets3/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/barfiller.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/assets3/css/style.css" type="text/css">
    <style>
        h4 {
            text-align: center;
            color: chocolate;
            font-family: 'Mochiy Pop P One', sans-serif;
            font-size: 35px;
        }
        </style>
</head>

<body>
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="header__top__inner">
                            <div class="header__top__left">
                                @if (@ViewBag.Id == null)
                                {
                                    <ul>


                                        <li><a href="/SigninRegister/Signin">Sign In</a> </li>
                                        <li><a href="/SigninRegister/Register">Sign Up</a> </li>



                                    </ul>
                                }
                                else
                                {
                                    <ul>
                                        <li><a href="#">Hello</a> </li>
                                        <li><a href="/Customers/Profile/@ViewBag.Id" class="nav-link text-dark">My Profile</a></li>
                                        <li><a href="/SigninRegister/Logout">LogOut</a> </li>
                                    </ul>

                                }


                            </div>
                            <!-- Cake Shop Name-->
                            @foreach (var item in Model.Item3)
                            {
                                <div class="header__logo">
                                    <h4>@item.Cakeshopname</h4>

                                </div>
                            }


                            @if (@ViewBag.Id != null)
                            {
                        <div class="header__top__right">
                            @*<div class="header__top__right__links">
           <a href="#" class="search-switch"><img src="/assets3/img/icon/search.png" alt=""></a>
           <a href="#"><img src="/assets3/img/icon/heart.png" alt=""></a>
        </div>*@


                         

                            <div class="header__top__right__links">
                                <a href="/Customers/UpdateProfile/@ViewBag.Id" class="nav-link text-dark">Edit Profile</a>
                            </div>


                            <div class="header__top__right__links">
                                <a href="/Customers/Invoice/@ViewBag.Id" class="nav-link text-dark">Invoice</a>
                            </div>

                            <div class="header__top__right__cart">
                                <a href="/Carts/UserCart/@ViewBag.Id"><img src="/assets3/img/icon/cart.png" alt=""> <span>0</span></a>
                                <div class="cart__price">Cart @*<span>$0.00</span>*@</div>
                            </div>



                        </div>
                            }


          

                        </div>
                    </div>
                </div>
                <div class="canvas__open"><i class="fa fa-bars"></i></div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="active"><a href="/Home/Index">Home</a></li>
                            <li><a href="/Home/Aboutus">About</a></li>
                            <li><a href="/Home/Shop">Menu</a></li>
                            <li><a href="/Orders/CustOrder/@ViewBag.Id">Order</a></li>

                            @*<li>
                                <a href="#">Pages</a>
                                <ul class="dropdown">
                                    <li><a href="./shop-details.html">Shop Details</a></li>
                                    <li><a href="./shoping-cart.html">Shoping Cart</a></li>
                                    <li><a href="./checkout.html">Check Out</a></li>
                                    <li><a href="./wisslist.html">Wisslist</a></li>
                                    <li><a href="./Class.html">Class</a></li>
                                    <li><a href="./blog-details.html">Blog Details</a></li>
                                </ul>
                            </li>*@

                            <li><a href="/Products/SearchName">Search</a></li>
                            <li><a href="/Home/ContactUs">Contact</a></li>
                            <li><a href="/Home/Testimonial">Testimonial</a></li>

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>


    <footer class="footer set-bg" style="background-color:darkslategrey" @*data-setbg="/assets3/img/footer-bg.jpg"*@>
        <div class="container">
            <div class="row">

                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="footer__widget">
                        <h6>Contact Cake Shop</h6>
                        @foreach (var item in Model.Item5)
                        {
                            <ul>
                                <li>Mobile Number: @item.Mobilenumber </li>
                                <li>Facebook: @item.Facebook </li>
                                <li>Instagram: @item.Instagram</li>
                                <li>Twitter: @item.Twitter</li>

                            </ul>
                        }

                    </div>
                </div>

                <hr />
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__logo">
                            @*<a href="#"><img src="/assets3/img/footer-logo.png" alt=""></a>*@
                            @foreach (var item in Model.Item3)
                            {
                                <h3 style="color:chocolate">@item.Cakeshopname</h3>
                            }
                        </div>

                        @foreach (var item in Model.Item1)
                        {
                            <p>
                                @item.Aboutustext
                            </p>
                        }




                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="footer__newslatter" style="color: #a4a4a4">
                        <h6>Our Pages</h6>

                        <ul>
                            <li><a href="/Home/Testimonial">Testimonial</a></li>
                            <li><a href="/Home/ContactUs">Contact Us</a></li>

                        </ul>

                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7">

                        <p class="copyright__text text-white" style="text-align:center">
                            @foreach (var item in Model.Item3)
                            {@item.Cakeshopname}
                            &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Js Plugins -->
    <script src="~/assets3/js/jquery-3.3.1.min.js"></script>
    <script src="~/assets3/js/bootstrap.min.js"></script>
    <script src="~/assets3/js/jquery.nice-select.min.js"></script>
    <script src="~/assets3/js/jquery.barfiller.js"></script>
    <script src="~/assets3/js/jquery.magnific-popup.min.js"></script>
    <script src="~/assets3/js/jquery.slicknav.js"></script>
    <script src="~/assets3/js/owl.carousel.min.js"></script>
    <script src="~/assets3/js/jquery.nicescroll.min.js"></script>
    <script src="~/assets3/js/main.js"></script>




</body>
</html>
